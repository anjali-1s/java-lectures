// Write a java program to find a number is prime or not using methods.
class IsPrime 
{
     static boolean isprime(int n)
     {
          for(int i = 2; i <= n/2; i++)
          {
               if(n % i == 0)
                  return false;              
          }
             return true;
     }

     public static void main(String args[])
     {

          int n = 21;
          System.out.println(isprime(n));
     }
}
