// Write a java program to print the sum of nth entered number.
import java.util.Scanner;
public class NumSum {
     public static void main(String[] args)
     {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum = 0;
        for(int i = 1; i <= n; i++)
        {
          sum = sum + i;
        }
        System.out.println("The sum of the nth number is :" + sum);
     }
}
